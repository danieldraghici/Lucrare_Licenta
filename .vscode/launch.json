    "version": "0.2.0",
    "configurations": [

        {
            "name": "Hailo Debug",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/custom_pipeline.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Headless Hailo Debug",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/custom_pipeline.py",
            "console": "integratedTerminal",
            "args": [
                "--headless"
            ]
        }
    ]
}